{
  "collectionName": "components_sections_rich_text_images",
  "info": {
    "displayName": "RichTextImage",
    "description": ""
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "text": {
      "type": "richtext"
    },
    "imagePosition": {
      "type": "enumeration",
      "enum": [
        "left",
        "right"
      ],
      "default": "right"
    },
    "backgroundColor": {
      "type": "string",
      "regex": "^#([A-Fa-f0-9]{6}|[A-Fa-f0-9]{3})$"
    },
    "contentVariant": {
      "type": "enumeration",
      "enum": [
        "light",
        "dark"
      ],
      "default": "dark"
    },
    "buttons": {
      "type": "component",
      "repeatable": true,
      "component": "molecules.button"
    }
  }
}
