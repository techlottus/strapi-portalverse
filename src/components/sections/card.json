{
  "collectionName": "components_sections_cards",
  "info": {
    "displayName": "Card",
    "description": ""
  },
  "options": {},
  "attributes": {
    "title": {
      "type": "string"
    },
    "subtitle": {
      "type": "string"
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "vertical",
        "horizontal"
      ],
      "default": "vertical"
    },
    "content": {
      "type": "richtext"
    },
    "linkText": {
      "type": "string"
    },
    "linkUrl": {
      "type": "text"
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": [
        "images"
      ]
    },
    "imageAspectRatio": {
      "type": "string",
      "regex": "([1-9][0-9]*(.[0-9]*)?)\\/[1-9][0-9]*(.[0-9]*)?",
      "default": "2/1"
    }
  }
}
